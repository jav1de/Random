# importing needed things
from kivy.app import App
from kivy.uix.label import Label
from kivy.uix.textinput import TextInput
from kivy.uix.button import Button
from kivy.uix.gridlayout import GridLayout
from kivy.config import Config
from random import randint


Config.set('graphics', 'width', '500')
Config.set('graphics', 'height', '200')
Config.write()


# creating layout
class MyGridLayout(GridLayout):
    def __init__(self, **kwargs):
        super(MyGridLayout, self).__init__(**kwargs)
        self.padding = 10
        self.cols = 2
        self.add_widget(Label(text = "Min", font_size = 20))
        self.Min = TextInput(size_hint = (.2, None), height = 30, multiline = False)
        self.add_widget(self.Min)
        self.add_widget(Label(text = "Max", font_size = 20))
        self.Max = TextInput(size_hint = (.2, None), height = 30, multiline = False)
        self.add_widget(self.Max)

        self.Generate = Button(text = "Generate", font_size = 20)
        self.Generate.bind(on_press = self.press)
        self.add_widget(self.Generate)
        self.Result = Label(text = "Result: nothing yet", font_size = 20)
        self.add_widget(self.Result)


    # adding event on button press
    def press(self, instance):
        try:
            int(self.Min.text)
            int (self.Max.text)
            checkInt = True
        except ValueError:
            checkInt = False

        if (checkInt == True):
            Min = int(self.Min.text)
            Max = int(self.Max.text)
            Number = randint(Min, Max)
            self.Result.font_size = 20
            self.Result.text = f"Result: {Number}"
        else:
            self.Result.font_size = 20
            self.Result.text = "Input number please."


# adding layout to app
class RandomApp(App):
    def build(self):
        return MyGridLayout()


# runing app
if __name__ == "__main__":
    RandomApp().run()
